{
    "name": "blibio/combinatorics",
    "description": "Simple combination and permutation generators.",
    "type": "library",
    "license": "MIT",
    "keywords": ["combinatorics", "combinations", "permutations", "math", "generator"],
    "homepage": "https://github.com/blibio/combinatorics",
    "support": {
        "issues": "https://github.com/blibio/combinatorics/issues"
    },
    "authors": [
        {
            "name": "Stephan Six",
            "email": "info+combinatorics@blib.io"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-gmp": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1.22",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-phpunit": "^2.0.7",
        "phpstan/phpstan-strict-rules": "^2.0.6",
        "phpunit/phpunit": "^12.3.8"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Blibio\\Combinatorics\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blibio\\Combinatorics\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse"
    }
}
